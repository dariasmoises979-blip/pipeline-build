name: Helm Lint

on:
  push:
    paths:
      - "helm/**"
  pull_request:
    paths:
      - "helm/**"

jobs:
  lint:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set up Helm
        uses: azure/setup-helm@v4
        with:
          version: v3.15.0

      - name: Run Helm Lint
        run: bash helm/ci/lint.sh
